#!/usr/bin/env bash
param() {
  if [[ ${!1} ]]; then
    if [[ ${!1} = *\ * ]]; then
      seth --fail "${0##*/}: error: $1 contains whitespace"
    else
      if [[ $3 = --address ]]; then
        value=$(seth --to-address "${!1}")
      elif [[ $3 = --wei ]]; then
        value=$(seth --to-wei "${!1}")
        value=$(seth --to-hex "$value")
      else
        value=$(seth --to-hex "${!1}")
      fi
      echo -s "$value" -i "$2"
    fi
  fi
}

param ETH_FROM       from      --address
param ETH_NONCE      nonce
param ETH_VALUE      value     --wei

# skip setting ETH_GAS if the NO_GAS var is provided, useful e.g. when
# doing gas estimation since the gas field should be empty
if [[ -z $SETH_PARAMS_NO_GAS ]]; then
    param ETH_GAS        gas
fi

if [[ "${ETH_TX_TYPE}" = 2 ]]; then
  param ETH_GAS_PRICE  maxFeePerGas  --wei
  param ETH_PRIO_FEE   maxPriorityFeePerGas --wei
else
  param ETH_GAS_PRICE  gasPrice  --wei
fi
